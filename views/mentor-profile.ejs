<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= mentor.full_name %> - Mentor Profile - AlumNet</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; }
        .card-hover:hover { transform: translateY(-2px); }
        .card-hover { transition: all 0.3s ease; }
        .gradient-bg { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <%- include('partials/header') %>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Back Button -->
        <div class="mb-6">
            <a href="/mentorship" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Mentors
            </a>
        </div>

        <!-- Mentor Profile Header -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden mb-8">
            <div class="gradient-bg px-8 py-12">
                <div class="flex items-center space-x-6">
                    <img src="<%= mentor.profile_picture_url || '/images/default-avatar.jpg' %>" 
                         alt="<%= mentor.full_name %>" 
                         class="w-24 h-24 rounded-full border-4 border-white object-cover">
                    <div class="text-white">
                        <h1 class="text-3xl font-bold mb-2"><%= mentor.full_name %></h1>
                        <p class="text-lg opacity-90">@<%= mentor.username %></p>
                        <div class="flex items-center space-x-4 mt-3">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white bg-opacity-20 text-white">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                                </svg>
                                Mentor
                            </span>
                            <span class="text-sm opacity-75">
                                <%= activeMentorships %> Active Mentees
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="px-8 py-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- Experience -->
                    <div class="text-center">
                        <div class="text-2xl font-bold text-gray-900"><%= mentor.years_of_experience %></div>
                        <div class="text-sm text-gray-600">Years Experience</div>
                    </div>
                    
                    <!-- Max Mentees -->
                    <div class="text-center">
                        <div class="text-2xl font-bold text-gray-900"><%= mentor.max_mentees %></div>
                        <div class="text-sm text-gray-600">Max Mentees</div>
                    </div>
                    
                    <!-- Availability -->
                    <div class="text-center">
                        <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= mentor.availability_status === 'available' ? 'bg-green-100 text-green-800' : mentor.availability_status === 'busy' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                            <%= mentor.availability_status.charAt(0).toUpperCase() + mentor.availability_status.slice(1) %>
                        </div>
                        <div class="text-sm text-gray-600 mt-1">Status</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-8">
                <!-- About -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">About</h3>
                    <div class="prose prose-sm text-gray-700">
                        <p><%= mentor.bio || mentor.user_bio || 'No bio available.' %></p>
                    </div>
                </div>

                <!-- Expertise Areas -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Expertise Areas</h3>
                    <% if (mentor.expertise_areas) { %>
                        <div class="flex flex-wrap gap-2">
                            <% try { 
                                const expertiseList = JSON.parse(mentor.expertise_areas);
                                expertiseList.forEach(area => { %>
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                                        <%= area %>
                                    </span>
                                <% }); 
                            } catch(e) { %>
                                <p class="text-gray-500">Expertise areas not specified</p>
                            <% } %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-500">No expertise areas specified</p>
                    <% } %>
                </div>

                <!-- Mentoring Style -->
                <% if (mentor.mentoring_style) { %>
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Mentoring Style</h3>
                        <p class="text-gray-700"><%= mentor.mentoring_style %></p>
                    </div>
                <% } %>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Request Mentorship -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Request Mentorship</h3>
                    
                    <% if (hasExistingRequest) { %>
                        <div class="text-center py-4">
                            <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= existingRequestStatus === 'pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %> mb-3">
                                <%= existingRequestStatus === 'pending' ? 'Request Pending' : 'Request Accepted' %>
                            </div>
                            <p class="text-sm text-gray-600">
                                <% if (existingRequestStatus === 'pending') { %>
                                    Your mentorship request is being reviewed.
                                <% } else { %>
                                    You have an active mentorship with this mentor.
                                <% } %>
                            </p>
                        </div>
                    <% } else if (mentor.current_mentees >= mentor.max_mentees) { %>
                        <div class="text-center py-4">
                            <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800 mb-3">
                                At Capacity
                            </div>
                            <p class="text-sm text-gray-600">This mentor has reached their maximum capacity.</p>
                        </div>
                    <% } else if (mentor.availability_status !== 'available') { %>
                        <div class="text-center py-4">
                            <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 mb-3">
                                Not Available
                            </div>
                            <p class="text-sm text-gray-600">This mentor is currently not accepting new mentees.</p>
                        </div>
                    <% } else { %>
                        <button onclick="openRequestModal()" 
                                class="w-full bg-blue-600 text-white px-4 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium">
                            Request Mentorship
                        </button>
                    <% } %>
                </div>

                <!-- Contact Information -->
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact Preferences</h3>
                    <div class="space-y-3">
                        <div class="flex items-center space-x-3">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                            </svg>
                            <span class="text-sm text-gray-700 capitalize"><%= mentor.preferred_communication %></span>
                        </div>
                        
                        <% if (mentor.linkedin_url) { %>
                            <div class="flex items-center space-x-3">
                                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                </svg>
                                <a href="<%= mentor.linkedin_url %>" target="_blank" class="text-sm text-blue-600 hover:text-blue-800">LinkedIn Profile</a>
                            </div>
                        <% } %>
                        
                        <% if (mentor.github_url) { %>
                            <div class="flex items-center space-x-3">
                                <svg class="w-5 h-5 text-gray-800" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                </svg>
                                <a href="<%= mentor.github_url %>" target="_blank" class="text-sm text-gray-600 hover:text-gray-800">GitHub Profile</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Request Mentorship Modal -->
    <div id="requestModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
            <div class="mt-3">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-medium text-gray-900">Request Mentorship</h3>
                    <button onclick="closeRequestModal()" class="text-gray-400 hover:text-gray-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                
                <form id="requestForm" class="space-y-4">
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message to Mentor</label>
                        <textarea id="message" name="message" rows="3" 
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                  placeholder="Tell the mentor why you'd like their guidance..."></textarea>
                    </div>
                    
                    <div>
                        <label for="goals" class="block text-sm font-medium text-gray-700 mb-1">Your Goals</label>
                        <textarea id="goals" name="goals" rows="3" 
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                  placeholder="What do you hope to achieve through this mentorship?"></textarea>
                    </div>
                    
                    <div>
                        <label for="duration" class="block text-sm font-medium text-gray-700 mb-1">Preferred Duration</label>
                        <select id="duration" name="duration" 
                                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="1_month">1 Month</option>
                            <option value="3_months" selected>3 Months</option>
                            <option value="6_months">6 Months</option>
                            <option value="1_year">1 Year</option>
                            <option value="ongoing">Ongoing</option>
                        </select>
                    </div>
                    
                    <div class="flex space-x-3 pt-4">
                        <button type="button" onclick="closeRequestModal()" 
                                class="flex-1 px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200">
                            Cancel
                        </button>
                        <button type="submit" 
                                class="flex-1 px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700">
                            Send Request
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        function openRequestModal() {
            document.getElementById('requestModal').classList.remove('hidden');
        }

        function closeRequestModal() {
            document.getElementById('requestModal').classList.add('hidden');
        }

        // Handle form submission
        document.getElementById('requestForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const requestData = {
                mentor_id: <%= mentor.mentor_id %>,
                message: formData.get('message'),
                goals: formData.get('goals'),
                duration: formData.get('duration')
            };
            
            try {
                const response = await fetch('/api/mentorship/request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(requestData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('Mentorship request sent successfully!', 'success');
                    closeRequestModal();
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    showNotification(result.message || 'Failed to send request', 'error');
                }
            } catch (error) {
                console.error('Error sending request:', error);
                showNotification('An error occurred. Please try again.', 'error');
            }
        });

        // Notification system
        function showNotification(message, type = 'info') {
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notification => notification.remove());
            
            const notification = document.createElement('div');
            notification.className = `notification fixed top-4 right-4 z-50 px-6 py-4 rounded-lg shadow-lg max-w-sm transform transition-all duration-300 translate-x-full`;
            
            const colors = {
                success: 'bg-green-500 text-white',
                error: 'bg-red-500 text-white',
                warning: 'bg-yellow-500 text-black',
                info: 'bg-blue-500 text-white'
            };
            
            notification.className += ` ${colors[type] || colors.info}`;
            notification.innerHTML = `
                <div class="flex items-center justify-between">
                    <span>${message}</span>
                    <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-lg font-bold opacity-70 hover:opacity-100">Ã—</button>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.remove('translate-x-full');
            }, 100);
            
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.classList.add('translate-x-full');
                    setTimeout(() => notification.remove(), 300);
                }
            }, 5000);
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
</body>
</html>
