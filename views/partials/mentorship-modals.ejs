<!-- Become a Mentor Modal -->
<div id="becomeMentorModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Become a Mentor</h2>
                <button onclick="closeBecomeMentorModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <form id="becomeMentorForm" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Bio</label>
                    <textarea name="bio" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                              placeholder="Tell potential mentees about your background, experience, and what you can offer..."></textarea>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Years of Experience</label>
                    <input type="number" name="years_of_experience" min="0" max="50" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Expertise Areas</label>
                    <div class="grid grid-cols-2 gap-3 max-h-48 overflow-y-auto border border-gray-200 rounded-lg p-3">
                        <% expertiseAreas.forEach(area => { %>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="expertise_areas" value="<%= area.area_name %>" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                                <span class="text-sm text-gray-700"><%= area.area_name %></span>
                            </label>
                        <% }); %>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Maximum Number of Mentees</label>
                    <select name="max_mentees" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="1">1 mentee</option>
                        <option value="2">2 mentees</option>
                        <option value="3" selected>3 mentees</option>
                        <option value="4">4 mentees</option>
                        <option value="5">5 mentees</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Preferred Communication</label>
                    <select name="preferred_communication" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="chat">Chat/Messaging</option>
                        <option value="video">Video Calls</option>
                        <option value="email">Email</option>
                        <option value="phone">Phone Calls</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Mentoring Style</label>
                    <textarea name="mentoring_style" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                              placeholder="Describe your mentoring approach and style..."></textarea>
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="button" onclick="closeBecomeMentorModal()" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="flex-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-2 rounded-lg hover:shadow-md transition-all">
                        Register as Mentor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Find Mentor Modal -->
<div id="findMentorModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Find Your Perfect Mentor</h2>
                <button onclick="closeFindMentorModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <form id="findMentorForm" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">What skills do you want to learn?</label>
                    <div class="grid grid-cols-2 gap-3 max-h-48 overflow-y-auto border border-gray-200 rounded-lg p-3">
                        <% expertiseAreas.forEach(area => { %>
                            <label class="flex items-center space-x-2">
                                <input type="checkbox" name="preferred_skills" value="<%= area.area_name %>" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                                <span class="text-sm text-gray-700"><%= area.area_name %></span>
                            </label>
                        <% }); %>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Your Career Stage</label>
                    <select name="career_stage" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="student">Student</option>
                        <option value="new_grad">New Graduate</option>
                        <option value="early_career">Early Career (1-3 years)</option>
                        <option value="mid_career">Mid Career (4-10 years)</option>
                        <option value="senior">Senior (10+ years)</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Preferred Mentor Experience Level</label>
                    <select name="preferred_mentor_experience" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="any">Any Experience Level</option>
                        <option value="junior">Junior (1-3 years)</option>
                        <option value="mid_level">Mid-Level (4-7 years)</option>
                        <option value="senior">Senior (8-15 years)</option>
                        <option value="executive">Executive (15+ years)</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Preferred Communication Method</label>
                    <select name="preferred_communication" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="chat">Chat/Messaging</option>
                        <option value="video">Video Calls</option>
                        <option value="email">Email</option>
                        <option value="phone">Phone Calls</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Meeting Frequency</label>
                    <select name="preferred_meeting_frequency" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="weekly">Weekly</option>
                        <option value="biweekly">Bi-weekly</option>
                        <option value="monthly">Monthly</option>
                        <option value="as_needed">As Needed</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Your Specific Goals</label>
                    <textarea name="specific_goals" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                              placeholder="What do you hope to achieve through mentorship? Be specific about your goals..."></textarea>
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="button" onclick="closeFindMentorModal()" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="flex-1 bg-gradient-to-r from-purple-600 to-pink-600 text-white px-4 py-2 rounded-lg hover:shadow-md transition-all">
                        Find Matching Mentors
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Request Mentorship Modal -->
<div id="requestMentorshipModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl max-w-lg w-full mx-4">
        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Request Mentorship</h2>
                <button onclick="closeRequestMentorshipModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <form id="requestMentorshipForm" class="space-y-6">
                <input type="hidden" id="selectedMentorId" name="mentor_id">
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Message to Mentor</label>
                    <textarea name="request_message" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                              placeholder="Introduce yourself and explain why you'd like this person as your mentor..."></textarea>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Your Goals</label>
                    <textarea name="goals" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                              placeholder="What do you hope to achieve through this mentorship?"></textarea>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Preferred Duration</label>
                    <select name="preferred_duration" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="1_month">1 Month</option>
                        <option value="3_months" selected>3 Months</option>
                        <option value="6_months">6 Months</option>
                        <option value="1_year">1 Year</option>
                        <option value="ongoing">Ongoing</option>
                    </select>
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="button" onclick="closeRequestMentorshipModal()" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="flex-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-2 rounded-lg hover:shadow-md transition-all">
                        Send Request
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
